{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["uploads/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)",
            "dest": "server.js",
            "headers": {
                "Connection": "Upgrade",
                "Upgrade": "websocket"
            }
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}
